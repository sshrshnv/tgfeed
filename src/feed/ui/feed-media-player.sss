.base
  position: relative
  width: 100%
  height: 100%

  > .thumb, > .video, > .poster, > .sound
    position: absolute

  > .thumb
    top: 0
    left: 0
    width: 100%
    height: 100%

  > .video, > .poster, > .sound
    top: 50%
    left: 50%
    translate: -50% -50%

  > .video, > .poster
    width: 100%
    height: 100%
    object-fit: contain

    &._hidden
      display: none

  > .sound
    height: 50%
    width: auto
    max-width: 50%
    opacity: 0.75
